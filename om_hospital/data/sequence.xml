<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1"> <!--noupdate pour que l'utilisateur peux modifier le prefix par example sans que les modifications se supprimer quand on reinitialise-->
        <record id="sequence_hospital_patient" model="ir.sequence"> <!-- on lui donne un id et le model on le prend a partir du url des sequence -->
            <field name="name">Patient Sequence</field> <!-- le nom qui va s'afficher -->
            <field name="code">hospital.patient.sequence</field> <!--le code qu'on va mettre dans la fonction create -->
            <field name="prefix">HP</field> <!-- le  prefix qui va etre utilisÃ© a chaque creation d'un patient par example HP001 HP002 -->
            <field name="padding">3</field> <!--nombre de chiffre par example padding=3 la sequence HP001 HP002... si le padding est 5 HP00001 -->
            <field name="company_id" eval="False"/>
        </record>
    </data>

    <data noupdate="1">
        <record id="sequence_appointment_patient" model="ir.sequence">
            <field name="name">Appointment Patient</field>
            <field name="code">appointment.sequence</field>
            <field name="prefix">RDV</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>

</odoo>

