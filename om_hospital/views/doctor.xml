<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
<!--                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible' : [('active', '=', True)]}"/>-->
                    <group>
                        <field name="name"/>
                        <field name="gender"/>
                        <field name="ref"/>
                        <field name="active" invisibale="1"/>
                    </group>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div> -->
            </form>
        </field>
    </record>
    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hospital.doctor.search</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <field name="ref"/>
                <field name="name"/>
                <field name="gender"/>
                <separator/>
                <filter name="archived" string="Archiver" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <!--<field name="context">{'search_default_filter_child':1}</field>
        <field name="search_view_id" ref="om_hospital.view_hospital_patient_search"/>-->
    </record>

    <menuitem id="menu_doctor"
              name="doctor"
              parent="menu_hospital_root"
              action="action_hospital_doctor"
              sequence="10"/>

</odoo>